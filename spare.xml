<theme>

	<formatVersion>4</formatVersion>

	<feature supported="carousel">

		<view name="system">

			<carousel name="systemcarousel">
				<color>00000000</color>
				<logoSize>1 1</logoSize>
				<size>1 1</size>
				<pos>1 1</pos>
				<logoScale>1</logoScale>
			</carousel>

			<text name="systemInfo">
				<backgroundColor>00000000</backgroundColor>
				<color>FFFFFF</color>
				<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<pos>0 0.792</pos>
			</text>

		</view>

	</feature>

	<view name="system, basic, detailed">

		<helpsystem name="help">
			<textColor>FFFFFF</textColor>
			<iconColor>FFFFFF</iconColor>
			<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<pos>1 1</pos>
		</helpsystem>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<path>./_inc/images/general-background.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>FFFFFF</color>
			<tile>false</tile>
		</image>

		<image name="backgroundLogo" extra="true">
			<path>./_inc/images/logo.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>FFFFFF</color>
			<tile>false</tile>
		</image>

		<text name="logoText" extra="true">
				<text>MissingNo.</text>
				<color>FFFFFF</color>
				<alignment>center</alignment>
				<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<size>1 0.45</size>
				<pos>0 -0.03</pos>
		</text>

	</view>

	<view name="basic, detailed">

		<image name="background" extra="true">
			<path>./_inc/images/general-background.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>FFFFFF</color>
			<tile>false</tile>
		</image>

	</view>

	<view name="basic">

		<!--
			background Logo hidden pos 2 2
		-->
		<image name="backgroundLogo" extra="true">
			<path>./_inc/images/general-background.png</path>
			<origin>0 0</origin>
			<pos>2 2</pos>
			<size>1 1</size>
			<color>FFFFFF</color>
			<tile>false</tile>
		</image>

		<text name="logoText" extra="true">
				<text>MissingNo.</text>
				<color>FFFFFF</color>
				<alignment>center</alignment>
				<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<size>1 0.225</size>
				<pos>0 0.082</pos>
		</text>

		<!--
			logo pos 2 2 outside of the screen
		-->
		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>2 2</pos>
			<maxSize>0.4 0.16</maxSize>
		</image>

		<textlist name="gamelist">
			<selectorColor>FC9C04</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>FFFFFF</primaryColor>
			<secondaryColor>00A3CC</secondaryColor>
			<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
			<pos>0.1 0.21</pos>
			<size>0.8 0.58</size>
			<fontSize>0.035</fontSize>
			<alignment>left</alignment>
		</textlist>

	</view>

	<view name="detailed">

		<!--
			background Logo hidden pos 2 2
		-->
		<image name="backgroundLogo" extra="true">
			<path>./_inc/images/general-background.png</path>
			<origin>0 0</origin>
			<pos>2 2</pos>
			<size>1 1</size>
			<color>FFFFFF</color>
			<tile>false</tile>
		</image>

		<text name="logoText" extra="true">
				<text>MissingNo.</text>
				<color>FFFFFF</color>
				<alignment>center</alignment>
				<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<size>1 0.225</size>
				<pos>0 0</pos>
		</text>

		<!--
			logo pos 2 2 outside of the screen
		-->
		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>2 2</pos>
			<maxSize>0.33 0.19</maxSize>
		</image>

			<textlist name="gamelist">
				<selectorColor>FC9C04</selectorColor>
				<selectedColor>FFFFFF</selectedColor>
				<primaryColor>FFFFFF</primaryColor>
				<secondaryColor>00A3CC</secondaryColor>
				<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
				<pos>0.1 0.21</pos>
				<size>0.42 0.595</size>
				<fontSize>0.035</fontSize>
				<horizontalMargin>0.01</horizontalMargin>
			</textlist>

			<image name="md_image">
				<origin>0.5 0.5</origin>
				<pos>0.725 0.5</pos>
				<maxSize>0.4 0.5</maxSize>
			</image>
		
		<image name="background_metadata" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0.73 0.02</pos>
			<size>0.26 0.62</size>
			<color>00000000</color>
		</image>

			<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
				<color>FFFFFF</color>
				<forceUppercase>1</forceUppercase>
				<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<size>0.24 0.01</size>
			</text>

			<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
				<color>FFFFFF</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<size>0.23 0.02</size>
			</text>

			<datetime name="md_releasedate, md_lastplayed">
				<color>FFFFFF</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/PetMe64.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<size>0.23 0.02</size>
			</datetime>

				<text name="md_lbl_rating">
					<pos>2 2</pos>
				</text>

				<rating name="md_rating">
					<pos>0.6 0.815</pos>
					<size>0.3 0.04</size>
					<filledPath>./_inc/images/star_full.png</filledPath>
					<unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
				</rating>

				<text name="md_lbl_players">
					<pos>2 2</pos>
				</text>
				<text name="md_players">
					<pos>0.25 0.815</pos>
				</text>

				<text name="md_lbl_genre">
					<pos>2 2</pos>
				</text>
				<text name="md_genre">
					<pos>2 2</pos>
				</text>

				<text name="md_lbl_developer">
					<pos>2 2</pos>
				</text>
				<text name="md_developer">
					<pos>2 2</pos>
				</text>

				<text name="md_lbl_publisher">
					<pos>2 2</pos>
				</text>
				<text name="md_publisher">
					<pos>2 2</pos>
				</text>

				<text name="md_lbl_releasedate">
					<pos>2 2</pos>
				</text>
				<datetime name="md_releasedate">
					<pos>0.35 0.815</pos>
				</datetime>

				<text name="md_lbl_playcount">
					<pos>2 2</pos>
				</text>
				<text name="md_playcount">
					<pos>2 2</pos>
				</text>

				<text name="md_lbl_lastplayed">
					<pos>2 2</pos>
				</text>
				<datetime name="md_lastplayed">
					<pos>2 2</pos>
				</datetime>
	</view>

</theme>
